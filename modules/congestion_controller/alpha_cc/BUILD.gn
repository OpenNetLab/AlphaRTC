import("../../../webrtc.gni")

config("bwe_test_logging") {
  if (rtc_enable_bwe_test_logging) {
    defines = [ "BWE_TEST_LOGGING_COMPILE_TIME_ENABLE=1" ]
  } else {
    defines = [ "BWE_TEST_LOGGING_COMPILE_TIME_ENABLE=0" ]
  }
}

rtc_static_library("alpha_cc") {
  configs += [ ":bwe_test_logging" ]
  sources = [
    "alpha_cc_network_control.cc",
    "alpha_cc_network_control.h",
    "../goog_cc/send_side_bandwidth_estimation.cc",
    "../goog_cc/send_side_bandwidth_estimation.h",
    "../goog_cc/loss_based_bandwidth_estimation.cc",
    "../goog_cc/loss_based_bandwidth_estimation.h",
  ]

  # There is no dependency now
  deps = [
  ]
}

rtc_source_set("link_capacity_estimator") {
  sources = [
    "link_capacity_estimator.cc",
    "link_capacity_estimator.h",
  ]
  deps = [
    "../../../api/units:data_rate",
    "../../../rtc_base:safe_minmax",
    "//third_party/abseil-cpp/absl/types:optional",
  ]
}